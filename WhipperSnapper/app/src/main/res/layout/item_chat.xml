<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/primary_color">

    <ImageView
        android:id="@+id/ivOtherUserChatPhoto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_personal_photo"
        android:layout_gravity="top"
        android:layout_marginTop="2dp" />
    <TextView
        android:textSize="18sp"
        android:id="@+id/tvChatText"
        android:padding="20dp"
        android:lines="3"
        android:layout_marginRight="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DUMMY: Chat text goes here."
        android:textColor="@color/text_on_primary_color">
    </TextView>
    <ImageView
        android:id="@+id/ivChatPhoto"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/ivThisUserChatPhoto"
        android:layout_marginLeft="-64dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_personal_photo"
        android:layout_gravity="top"
        android:layout_marginTop="2dp" />
</LinearLayout>